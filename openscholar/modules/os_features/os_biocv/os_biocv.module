					$setting = TRUE;
					break;
				case 's:4:"b:0;";':
					$setting = TRUE;
					break;
				default:
					$setting = TRUE;
			}
			$values['tabs'] = $setting;
			$vsites[$row->gid] = $values;
		}
		else {
