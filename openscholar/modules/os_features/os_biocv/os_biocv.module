			$all_cv_nids = $query->execute()->fetchAllKeyed($key_index = 0, $value_index = 0);

      // create cv page (if necessary)
      if ($vsite_values['tabs'] && isset($vsite_values['cv_body'])) {
        $cv_body = "";
        if(isset($vsite_values['cv_body'])) {
          $cv_body = $vsite_values['cv_body'];
